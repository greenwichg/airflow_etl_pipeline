# ============================================================================
# Snowflake
# ============================================================================

SNOWFLAKE_ACCOUNT=company.us-east-1
SNOWFLAKE_USER=etl_service_account
SNOWFLAKE_PASSWORD=changeme
SNOWFLAKE_WAREHOUSE=ETL_WH
SNOWFLAKE_DATABASE=ANALYTICS_DB
SNOWFLAKE_SCHEMA=SALES
SNOWFLAKE_ROLE=ETL_ROLE
SNOWFLAKE_REGION=us-east-1

# ============================================================================
# AWS
# ============================================================================

AWS_ACCESS_KEY_ID=AKIAXXXXXXXXXXXXXXXX
AWS_SECRET_ACCESS_KEY=changeme
AWS_DEFAULT_REGION=us-east-1
S3_STAGING_BUCKET=data-pipeline-staging

# ============================================================================
# Airflow Configuration
# ============================================================================

AIRFLOW_HOME=/path/to/airflow
AIRFLOW__CORE__DAGS_FOLDER=${AIRFLOW_HOME}/dags
AIRFLOW__CORE__LOAD_EXAMPLES=False
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__DATABASE__SQL_ALCHEMY_CONN=postgresql+psycopg2://airflow:airflow@localhost/airflow

# Email Configuration
AIRFLOW__SMTP__SMTP_HOST=smtp.company.com
AIRFLOW__SMTP__SMTP_PORT=587
AIRFLOW__SMTP__SMTP_USER=airflow@company.com
AIRFLOW__SMTP__SMTP_PASSWORD=changeme
AIRFLOW__SMTP__SMTP_MAIL_FROM=airflow@company.com

# ============================================================================
# Monitoring & Alerting
# ============================================================================

ALERT_EMAIL_LIST=data-engineering@company.com,alerts@company.com

# Datadog (Optional)
DATADOG_API_KEY=changeme
DATADOG_APP_KEY=changeme

# Sentry (Optional)
SENTRY_DSN=https://xxx@sentry.io/xxx

# ============================================================================
# Data Quality Thresholds
# ============================================================================

MIN_RECORD_COUNT=100
MAX_NULL_PERCENTAGE=5.0
MAX_RETRIES=3
RETRY_DELAY_MINUTES=5

# ============================================================================
# Development vs Production
# ============================================================================

ENVIRONMENT=development  # development, staging, production
DEBUG=true
LOG_LEVEL=INFO

# ============================================================================
# Security & Compliance
# ============================================================================

# Enable encryption at rest
ENCRYPT_S3_DATA=true
ENCRYPT_SNOWFLAKE_DATA=true

# Audit logging
ENABLE_AUDIT_LOG=true
AUDIT_LOG_DESTINATION=s3://audit-logs-bucket/airflow/

# ============================================================================
# Performance Tuning
# ============================================================================

# PostgreSQL
POSTGRES_MAX_CONNECTIONS=20
POSTGRES_CONNECTION_TIMEOUT=30

# Snowflake
SNOWFLAKE_WAREHOUSE_SIZE=MEDIUM
SNOWFLAKE_STATEMENT_TIMEOUT=3600

# Airflow
AIRFLOW__CORE__PARALLELISM=32
AIRFLOW__CORE__DAG_CONCURRENCY=16
AIRFLOW__CORE__MAX_ACTIVE_RUNS_PER_DAG=1
